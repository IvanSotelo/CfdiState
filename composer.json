{
    "name": "ivan-sotelo/sat-estado-cfdi",
    "description": "Consulta el estado de un cfdi en el webservice del SAT",
    "type": "library",
    "scripts": {
        "test": "phpunit",
        "test:dist": "phpunit --coverage-clover clover.xml",
        "test:coverage": "php-coveralls -v -x clover.xml -o ./logs --exclude-no-stmt"
    },
    "require": {
        "php": ">=7.1",
        "illuminate/support": "^5.7|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.4",
        "orchestra/testbench": "~3.7",
        "mockery/mockery": "^1.2",
        "php-coveralls/php-coveralls": "~2.1"
    },
    "autoload": {
        "psr-4": {
            "IvanSotelo\\SatEstadoCfdi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IvanSotelo\\SatEstadoCfdi\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "IvanSotelo\\SatEstadoCfdi\\CfdiStateServiceProvider"
            ]
        }
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Ivan Sotelo",
            "email": "isotelo@controlla.com.mx"
        }
    ]
}
